<div class="container">
    <h1 class="my-4 py-3">Carrito</h1>
    <a class="btn btn-info m-2" href='/productos'> Volver al Inicio</a>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Producto</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Eliminar</th>
                </tr>
            </thead>
            <tbody>
                {{#each cart.products}}
                <tr>
                    <td>
                        {{this.product.title}}
                    </td>
                    <td>${{this.product.price}}</td>
                    <td>{{this.quantity}}</td>
                    <td>
                        <button type="button" class="btn btn-danger btn-sm eliminarDelCarrito" data-id="{{this.product._id}}">Eliminar</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="text-right mb-3">
        <button type="button" class="btn btn-primary finalizarCompra" data-id="{{cart._id}}">Finalizar Compra</button>
    </div>

    <div id="purchaseResults" class="ticket"  style="display: none;" class="m-3 p-3">
    <h2 class="m-2">Productos Comprados</h2>
    <ul id="purchasedProducts" ></ul>
    <h2 class="m-2">Precio Total</h2>
    <ul id="total" ></ul>

</div>

</div>

<script type="module" src="/js/purchase.js"></script>