<div class="container">
    <h1 class="mb-4">PRODUCTOS</h1>
    {{#if user}}
        <div class="session-status d-flex justify-content-between align-items-center mb-4">
            <p>Bienvenido {{user.first_name}} {{user.last_name}}</p>
            <a href="/session/logout" class="btn btn-danger mb-4 ml-4">Cerrar sesi√≥n</a>
        </div>
    {{/if}}
    <div class="row productos">
        {{#each prods}}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <p class="card-text"><strong>Precio: </strong>${{this.price}}</p>
                        <button class="btn btn-primary botonAgregar" data-id={{this._id}}>Agregar al carrito</button>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>

<script src="/js/products.js"></script>


